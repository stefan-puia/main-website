---
layout: "base.njk"
---

<section id="one">
  <header class="major">
    <h2>{{ config.home.heroHeader | safe }}</h2>
  </header>
  <p>{{ config.home.heroDescription | safe }}</p>
  <ul class="actions">
    <li>
      <a href="/blog" class="button">{{ config.home.button }}</a>
    </li>
  </ul>
</section>

{% if ((collections.blog | featured).length > 0) %}
  <section id="two">
    <h2>{{ config.home.featured.header }}</h2>
    <div class="row">
      {% for blog in collections.blog | featured %}
        <article class="col-6 col-12-xsmall work-item">
          <a href="{{ blog.data.featured.imageFull }}" class="image fit thumb">
            <img src="{{ blog.data.featured.imageThumb }}" alt="{{ blog.data.featured.imageAlt }}"/>
          </a>
          <h3>{{ blog.data.title }}</h3>
          <p>{{ blog.data.featured.description }}</p>
        </article>
      {% endfor %}
    </div>
    <ul class="actions">
      <li>
        <a href="/portfolio" class="button">{{ config.home.featured.button }}</a>
      </li>
    </ul>
  </section>
{% endif %}